# ============================================================================
# Frontend Environment Variables Template
# Media Center Arti Marziali
# ============================================================================
#
# Copy this file to .env.local and configure your values
# cp .env.example .env.local
#
# ðŸŽ“ AI_MODULE: Frontend Environment Configuration
# ðŸŽ“ AI_DESCRIPTION: Client-side environment variables for Next.js
# ðŸŽ“ AI_BUSINESS: Enables environment-specific configuration
# ðŸŽ“ AI_TEACHING: NEXT_PUBLIC_ prefix exposes vars to browser
# ============================================================================

# =============================================================================
# Environment
# =============================================================================
NEXT_PUBLIC_ENVIRONMENT=development
NEXT_PUBLIC_RELEASE=v1.0.0
NEXT_PUBLIC_DEBUG=true

# =============================================================================
# API Configuration
# =============================================================================
# Main API endpoint
NEXT_PUBLIC_API_URL=http://localhost:8000

# Service-specific endpoints (for microservices architecture)
NEXT_PUBLIC_STUDIO_API_URL=http://localhost:8001
NEXT_PUBLIC_LIBRARY_API_URL=http://localhost:8102
NEXT_PUBLIC_STREAMING_API_URL=http://localhost:8000

# API version
NEXT_PUBLIC_API_VERSION=v1

# =============================================================================
# WebSocket Configuration
# =============================================================================
NEXT_PUBLIC_WS_URL=ws://localhost:8000

# =============================================================================
# Stripe Payment (Public Key Only)
# =============================================================================
# Get keys from: https://dashboard.stripe.com/apikeys
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=pk_test_xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx

# =============================================================================
# PayPal (Client ID Only)
# =============================================================================
NEXT_PUBLIC_PAYPAL_CLIENT_ID=your-paypal-client-id

# =============================================================================
# Sentry Error Tracking
# =============================================================================
# Get your DSN from: https://sentry.io/settings/projects/
NEXT_PUBLIC_SENTRY_DSN=https://your-sentry-dsn@sentry.io/your-project-id

# =============================================================================
# Feature Flags
# =============================================================================
NEXT_PUBLIC_FEATURE_LIVE_STREAMING=true
NEXT_PUBLIC_FEATURE_AR_MOBILE=false
NEXT_PUBLIC_FEATURE_SKELETON_VIEWER=true
NEXT_PUBLIC_FEATURE_CURRICULUM=true
NEXT_PUBLIC_FEATURE_AI_FEEDBACK=true
NEXT_PUBLIC_FEATURE_BLOCKCHAIN_DONATIONS=false

# =============================================================================
# Analytics (Optional)
# =============================================================================
# Google Analytics 4
NEXT_PUBLIC_GA_MEASUREMENT_ID=

# Plausible Analytics (privacy-friendly alternative)
NEXT_PUBLIC_PLAUSIBLE_DOMAIN=

# =============================================================================
# CDN / Storage
# =============================================================================
# CDN URL for static assets (leave empty for local)
NEXT_PUBLIC_CDN_URL=

# Video/media storage URL
NEXT_PUBLIC_STORAGE_URL=http://localhost:8000/storage

# =============================================================================
# PWA Configuration
# =============================================================================
NEXT_PUBLIC_PWA_ENABLED=true

# =============================================================================
# Development Settings
# =============================================================================
# Show dev tools / debug panels
NEXT_PUBLIC_SHOW_DEV_TOOLS=true

# Mock API responses (for development without backend)
NEXT_PUBLIC_USE_MOCK_API=false

# =============================================================================
# Social / OAuth (Optional)
# =============================================================================
# Google OAuth Client ID
NEXT_PUBLIC_GOOGLE_CLIENT_ID=

# =============================================================================
# App Metadata
# =============================================================================
NEXT_PUBLIC_APP_NAME=Media Center Arti Marziali
NEXT_PUBLIC_APP_DESCRIPTION=Piattaforma AI-First per insegnamento arti marziali
NEXT_PUBLIC_CONTACT_EMAIL=support@mediacenter-artimarziali.it
