# === Database ===
# Per sviluppo locale Windows usa martial_user
# Per Docker/produzione usa le credenziali di docker-compose.yml
DATABASE_URL=postgresql+asyncpg://martial_user:martial_pass@localhost:5432/martial_arts_db
POSTGRES_USER=martial_user
POSTGRES_PASSWORD=martial_pass
POSTGRES_DB=martial_arts_db

# === Redis ===
REDIS_URL=redis://localhost:6379/0

# === JWT Auth ===
JWT_SECRET=your_jwt_secret_key_change_this_in_production
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# === OpenAI ===
OPENAI_API_KEY=sk-your-openai-api-key

# === ChromaDB ===
CHROMADB_HOST=localhost
CHROMADB_PORT=8001

# === Stripe ===
STRIPE_API_KEY=sk_test_your_stripe_key
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret

# === AWS S3 ===
AWS_ACCESS_KEY=your_aws_access_key
AWS_SECRET_KEY=your_aws_secret_key
S3_BUCKET=martial-arts-media
AWS_REGION=eu-west-1

# === Blockchain ===
POLYGON_RPC_URL=https://polygon-rpc.com
POLYGON_PRIVATE_KEY=your_polygon_private_key
IPFS_API_URL=https://ipfs.infura.io:5001

# === Email (Optional) ===
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASSWORD=your_email_password

# === Sentry (Optional) ===
SENTRY_DSN=your_sentry_dsn

# === Environment ===
ENVIRONMENT=development  # development | staging | production
DEBUG=True

# === Frontend ===
NEXT_PUBLIC_API_URL=http://localhost:8000
